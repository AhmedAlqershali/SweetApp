<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_solid"
    android:padding="8dp"
    tools:context=".ChooseTypeActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_back"

        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >


    <com.manojbhadane.QButton
        android:id="@+id/btn_Chalet_Owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/teal_700"
        android:text="صاحب الشاليه "
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@android:color/background_light"
        app:qb_radius="100"
        app:qb_strokeColor="@color/teal_200"
        app:qb_strokeWidth="5" />

    <com.manojbhadane.QButton
        android:id="@+id/btn_tenant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="المستأجر"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/teal_700"
        android:gravity="center"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        app:qb_radius="100"
        app:qb_strokeColor="@color/teal_200"
        app:qb_strokeWidth="5" />
</LinearLayout>



</RelativeLayout>
