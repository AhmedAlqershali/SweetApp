<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_solid"
    tools:context=".DetailsTenantActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
       android:layout_margin="4dp"
        android:src="@drawable/ic_back"
        />

    <!--    Img Chalet-->
    <ImageView
        android:id="@+id/image_detalis"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/b"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/add_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="تقييم الشالية"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/button"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />


        <RatingBar
            android:id="@+id/rating_all"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:layout_toEndOf="@+id/add_rating"
            android:numStars="5" />

    </RelativeLayout>

    <!--       name chalet    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        >

        <TextView
            android:id="@+id/name_details"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/green"
            android:text="شاليه النجوم"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اسم الشاليه: "
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </LinearLayout>


    <!--       Titel chalet    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        >

        <TextView
            android:id="@+id/address_details"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@color/green"
            android:layout_weight="1"
            android:text="غزة -شارع النصر"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عنوان الشاليه: "
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

    </LinearLayout>


    <!--       number is  chalet Owner   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        >

        <TextView
            android:id="@+id/txt_numberisPhone_details"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:background="@color/green"
            android:text="0597668446"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="رقم صاحب الشاليه: "
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />
    </LinearLayout>



    <!--      Salary is  chalet and The number of hours  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"


        >
        <TextView
            android:id="@+id/txt_numOfHours_details"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/green"
            android:text="10ساعات"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_margin="4dp"
            android:textColor="@color/black"
            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="عدد ساعات الفترة: "
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_margin="4dp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/salary_details"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/green"
            android:text="500شيكل"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_margin="4dp"

            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سعر الشاليه: "
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_margin="4dp"
            android:textStyle="bold"
            />




    </LinearLayout>
    <Button
        android:id="@+id/Services"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4A4A4A"
        android:layout_marginTop="10dp"
        android:text="الخدمات"
        android:textColor="@color/white"
        android:textSize="20sp"
        />



    <!--       TextView 1   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"


        >

        <com.manojbhadane.QButton
            android:id="@+id/Services1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_800"
            android:text="بركة سباحة للكبار"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
        <com.manojbhadane.QButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_800"
            android:text="ملعب"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

        <com.manojbhadane.QButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_800"
            android:text="Wifi"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            />


    </LinearLayout>

    <!--      TextView 2  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"

        >

        <com.manojbhadane.QButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_800"
            android:text="بركة سباحة للصغار"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

        <com.manojbhadane.QButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_800"
            android:text="بلياردو"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

        <com.manojbhadane.QButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_800"
            android:text="المطبخ"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

    </LinearLayout>
    <!--       TextView 3   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center"

        >

        <com.manojbhadane.QButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_800"
            android:text="تنس طاولة"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
        <com.manojbhadane.QButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_800"
            android:text="استيريو"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
        <com.manojbhadane.QButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_800"
            android:text="المرآب"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            />

    </LinearLayout>


        <Button
            android:id="@+id/reservation_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:background="@drawable/button"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="حجز"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            />



    </LinearLayout>
</ScrollView>